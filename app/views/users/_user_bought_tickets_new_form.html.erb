<%= form_with(model: @bought_ticket, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :ticket_bought_id %>

    <%= f.collection_select :ticket_bought_id, Ticket.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :bought_by_id, value: @user.id %>

  <%= f.submit "Create bought ticket", class: "btn btn-block btn-outline-secondary" %>
<% end %>
