<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bought Tickets

    <a data-toggle="collapse" href="#user_bought_tickets_new_form">
      Add bought ticket
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.bought_tickets.each do |bought_ticket| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to bought_ticket, bought_ticket %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_bought_tickets_new_form">
        <%= render partial: "users/user_bought_tickets_new_form" %>
      </div>
    </div>

  </ul>
</div>
