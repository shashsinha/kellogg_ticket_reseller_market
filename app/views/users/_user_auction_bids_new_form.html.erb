<!-- Form auction_bid start -->
<%= form_with(model: @auction_bid, local: true) do |f| %>
<!-- Form auction_bid end -->

  <!-- Label and input for ticket_id start -->
  <div class="form-group">
    <%= f.label :ticket_id %>

    <!-- Input for ticket_id start -->
    <%= f.collection_select :ticket_id, Ticket.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for ticket_id end -->
  </div>
  <!-- Label and input for ticket_id end -->

  <!-- Label and input for bid_by_id start -->
  <!-- Input for bid_by_id start -->
  <%= f.hidden_field :bid_by_id, value: @user.id %>
  <!-- Input for bid_by_id end -->
  <!-- Label and input for bid_by_id end -->

  <%= f.submit "Create auction bid", class: "btn btn-block btn-outline-secondary" %>
<% end %>
