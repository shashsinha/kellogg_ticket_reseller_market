<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Auction Bids

    <a data-toggle="collapse" href="#user_auction_bids_new_form">
      Add auction bid
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.auction_bids.each do |auction_bid| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to auction_bid, auction_bid %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_auction_bids_new_form">
        <%= render partial: "users/user_auction_bids_new_form" %>
      </div>
    </div>

  </ul>
</div>
