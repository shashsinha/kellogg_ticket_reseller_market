<%= form_with(model: @ticket, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :event_id %>

    <%= f.collection_select :event_id, Event.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :sold_by_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :price %>

    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_bid_time %>
    <%= f.datetime_select :end_bid_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :starting_bid %>

    <%= f.text_field :starting_bid, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :target_bid %>

    <%= f.text_field :target_bid, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <%= f.submit "Create ticket", class: "btn btn-block btn-outline-secondary" %>
<% end %>
