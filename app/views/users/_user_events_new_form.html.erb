<!-- Form event start -->
<%= form_with(model: @event, local: true) do |f| %>
<!-- Form event end -->

  <!-- Label and input for time_of_event start -->
  <div class="form-group">
    <%= f.label :time_of_event %>
    <!-- Input for time_of_event start -->
    <%= f.datetime_select :time_of_event, class: "form-control" %>
    <!-- Input for time_of_event end -->
  </div>
  <!-- Label and input for time_of_event end -->

  <!-- Label and input for created_by_id start -->
  <!-- Input for created_by_id start -->
  <%= f.hidden_field :created_by_id, value: @user.id %>
  <!-- Input for created_by_id end -->
  <!-- Label and input for created_by_id end -->

  <!-- Label and input for event_location start -->
  <div class="form-group">
    <%= f.label :event_location %>

    <!-- Input for event_location start -->
    <%= f.text_field :event_location, class: "form-control" %>
    <!-- Input for event_location end -->
  </div>
  <!-- Label and input for event_location end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for event_category_id start -->
  <div class="form-group">
    <%= f.label :event_category_id %>

    <!-- Input for event_category_id start -->
    <%= f.collection_select :event_category_id, EventCategory.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for event_category_id end -->
  </div>
  <!-- Label and input for event_category_id end -->

  <%= f.submit "Create event", class: "btn btn-block btn-outline-secondary" %>
<% end %>
