<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <!-- Form html options start -->
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <!-- Form html options end -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>


          <!-- Devise Input for first_name start -->
          <div class="form-group">
            <% first_name_was_invalid = resource.errors.include?(:first_name) %>

            <% first_name_class = "form-control" %>

            <% if was_validated %>
              <% if first_name_was_invalid %>
                <% first_name_class << " is-invalid" %>
              <% else %>
                <% first_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :first_name %>

            <%= f.text_field :first_name, :class => first_name_class, :placeholder => "Enter first name" %>

            <% if first_name_was_invalid %>
              <% resource.errors.full_messages_for(:first_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for first_name end -->

          <!-- Devise Input for last_name start -->
          <div class="form-group">
            <% last_name_was_invalid = resource.errors.include?(:last_name) %>

            <% last_name_class = "form-control" %>

            <% if was_validated %>
              <% if last_name_was_invalid %>
                <% last_name_class << " is-invalid" %>
              <% else %>
                <% last_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :last_name %>

            <%= f.text_field :last_name, :class => last_name_class, :placeholder => "Enter last name" %>

            <% if last_name_was_invalid %>
              <% resource.errors.full_messages_for(:last_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for last_name end -->

          <!-- Devise Input for email_address start -->
          <div class="form-group">
            <% email_address_was_invalid = resource.errors.include?(:email_address) %>

            <% email_address_class = "form-control" %>

            <% if was_validated %>
              <% if email_address_was_invalid %>
                <% email_address_class << " is-invalid" %>
              <% else %>
                <% email_address_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email_address %>

            <%= f.text_field :email_address, :class => email_address_class, :placeholder => "Enter email address" %>

            <% if email_address_was_invalid %>
              <% resource.errors.full_messages_for(:email_address).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for email_address end -->

          <!-- Devise Input for credit_card_number start -->
          <div class="form-group">
            <% credit_card_number_was_invalid = resource.errors.include?(:credit_card_number) %>

            <% credit_card_number_class = "form-control" %>

            <% if was_validated %>
              <% if credit_card_number_was_invalid %>
                <% credit_card_number_class << " is-invalid" %>
              <% else %>
                <% credit_card_number_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :credit_card_number %>

            <%= f.number_field :credit_card_number, :class => credit_card_number_class, :placeholder => "Enter credit card number" %>

            <% if credit_card_number_was_invalid %>
              <% resource.errors.full_messages_for(:credit_card_number).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for credit_card_number end -->

          <!-- Devise Input for credit_card_zip_code start -->
          <div class="form-group">
            <% credit_card_zip_code_was_invalid = resource.errors.include?(:credit_card_zip_code) %>

            <% credit_card_zip_code_class = "form-control" %>

            <% if was_validated %>
              <% if credit_card_zip_code_was_invalid %>
                <% credit_card_zip_code_class << " is-invalid" %>
              <% else %>
                <% credit_card_zip_code_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :credit_card_zip_code %>

            <%= f.number_field :credit_card_zip_code, :class => credit_card_zip_code_class, :placeholder => "Enter credit card zip code" %>

            <% if credit_card_zip_code_was_invalid %>
              <% resource.errors.full_messages_for(:credit_card_zip_code).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for credit_card_zip_code end -->

          <!-- Devise Input for credit_card_expiration start -->
          <div class="form-group">
            <% credit_card_expiration_was_invalid = resource.errors.include?(:credit_card_expiration) %>

            <% credit_card_expiration_class = "form-control" %>

            <% if was_validated %>
              <% if credit_card_expiration_was_invalid %>
                <% credit_card_expiration_class << " is-invalid" %>
              <% else %>
                <% credit_card_expiration_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :credit_card_expiration %>

            <%= f.date_select :credit_card_expiration, class: "#{credit_card_expiration_class} col-sm-2" %>

            <% if credit_card_expiration_was_invalid %>
              <% resource.errors.full_messages_for(:credit_card_expiration).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for credit_card_expiration end -->
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
