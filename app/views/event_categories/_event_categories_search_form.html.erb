<%= search_form_for @q, :class => collapse_search_form, :id => "event_categories_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :time_of_event, "Event Time of event" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='eventsgteqtime_of_eventPicker' data-target-input="nearest">
          <%= f.text_field :events_time_of_event_gteq, :class => "form-control datetimepicker-input", :placeholder => "Event Time of event greater than or equal to", :data => {:target => '#eventsgteqtime_of_eventPicker'} %>
          <div class="input-group-append" data-target='#eventsgteqtime_of_eventPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='eventslteqtime_of_eventPicker' data-target-input="nearest">
          <%= f.text_field :events_time_of_event_lteq, :class => "form-control datetimepicker-input", :placeholder => "Event Time of event less than or equal to", :data => {:target => '#eventslteqtime_of_eventPicker'} %>
          <div class="input-group-append" data-target='#eventslteqtime_of_eventPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#eventsgteqtime_of_eventPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#eventslteqtime_of_eventPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#eventsgteqtime_of_eventPicker').on("dp.change", function (e) {
              $('#eventslteqtime_of_eventPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#eventslteqtime_of_eventPicker').on("dp.change", function (e) {
              $('#eventsgteqtime_of_eventPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/event_categories" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#event_categories_filters">
  Show filters
</a>
