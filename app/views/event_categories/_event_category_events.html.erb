<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Events

    <a data-toggle="collapse" href="#event_category_events_new_form">
      Add event
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event_category.events.each do |event| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to event, event %>

        <%= link_to event, method: :delete, data: { confirm: "Do you really want to delete this event" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_category_events_new_form">
        <%= render partial: "event_categories/event_category_events_new_form" %>
      </div>
    </div>

  </ul>
</div>
