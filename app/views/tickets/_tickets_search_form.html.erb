<%= search_form_for @q, :class => collapse_search_form, :id => "tickets_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :target_bid, "Target bid" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :target_bid_gteq, :class => "form-control", :placeholder => "Target bid greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :target_bid_lteq, :class => "form-control", :placeholder => "Target bid less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :starting_bid, "Starting bid" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :starting_bid_gteq, :class => "form-control", :placeholder => "Starting bid greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :starting_bid_lteq, :class => "form-control", :placeholder => "Starting bid less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :end_bid_time, "End bid time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='end_bid_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :end_bid_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "End bid time greater than or equal to", :data => {:target => '#end_bid_timegteqPicker'} %>
          <div class="input-group-append" data-target='#end_bid_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='end_bid_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :end_bid_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "End bid time less than or equal to", :data => {:target => '#end_bid_timelteqPicker'} %>
          <div class="input-group-append" data-target='#end_bid_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#end_bid_timegteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#end_bid_timelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#end_bid_timegteqPicker').on("dp.change", function (e) {
              $('#end_bid_timelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#end_bid_timelteqPicker').on("dp.change", function (e) {
              $('#end_bid_timegteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :price, "Price" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :price_gteq, :class => "form-control", :placeholder => "Price greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :price_lteq, :class => "form-control", :placeholder => "Price less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :sold_by_first_name_cont, "Sold by first_name contains" %>
    <%= f.text_field :sold_by_first_name_cont, :class => "form-control", :placeholder => "Sold by first_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :time_of_event, "Event Time of event" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='eventgteqtime_of_eventPicker' data-target-input="nearest">
          <%= f.text_field :event_time_of_event_gteq, :class => "form-control datetimepicker-input", :placeholder => "Event Time of event greater than or equal to", :data => {:target => '#eventgteqtime_of_eventPicker'} %>
          <div class="input-group-append" data-target='#eventgteqtime_of_eventPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='eventlteqtime_of_eventPicker' data-target-input="nearest">
          <%= f.text_field :event_time_of_event_lteq, :class => "form-control datetimepicker-input", :placeholder => "Event Time of event less than or equal to", :data => {:target => '#eventlteqtime_of_eventPicker'} %>
          <div class="input-group-append" data-target='#eventlteqtime_of_eventPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#eventgteqtime_of_eventPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#eventlteqtime_of_eventPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#eventgteqtime_of_eventPicker').on("dp.change", function (e) {
              $('#eventlteqtime_of_eventPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#eventlteqtime_of_eventPicker').on("dp.change", function (e) {
              $('#eventgteqtime_of_eventPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/tickets" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#tickets_filters">
  Show filters
</a>
