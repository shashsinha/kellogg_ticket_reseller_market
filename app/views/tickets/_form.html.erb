      <% end %>
    <% end %>

    <%= f.label :end_bid_time %>
    <%= f.datetime_select :end_bid_time, class: end_bid_time_class, placeholder: "Enter end bid time" %>
    <% if end_bid_time_was_invalid %>
      <% ticket.errors.full_messages_for(:end_bid_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% starting_bid_class = "form-control" %>
    <% starting_bid_was_invalid = ticket.errors.include?(:starting_bid) %>

    <% if was_validated %>
      <% if starting_bid_was_invalid %>
        <% starting_bid_class << " is-invalid" %>
      <% else %>
        <% starting_bid_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :starting_bid %>
    <%= f.number_field :starting_bid, class: starting_bid_class, placeholder: "Enter starting bid" %>
    <% if starting_bid_was_invalid %>
      <% ticket.errors.full_messages_for(:starting_bid).each do |message| %>
        <div class="invalid-feedback d-flex">
