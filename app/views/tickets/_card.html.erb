<div class="card mb-3">
  <h2 class="card-header h4">
    Ticket #<%= ticket.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Event</dt>
      <dd>
        <% if @ticket.event.present? %>
          <%= link_to ticket.event, ticket.event %>
        <% end %>
      </dd>

      <dt>Sold by</dt>
      <dd>
        <% if @ticket.sold_by.present? %>
          <%= link_to ticket.sold_by, ticket.sold_by %>
        <% end %>
      </dd>

      <dt>Price</dt>
      <dd><%= ticket.price %></dd>

      <dt>End bid time</dt>
      <dd><%= ticket.end_bid_time %></dd>

      <dt>Starting bid</dt>
      <dd><%= ticket.starting_bid %></dd>

      <dt>Target bid</dt>
      <dd><%= ticket.target_bid %></dd>

      <dt>Description</dt>
      <dd><%= ticket.description %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back ticket, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_ticket_url(ticket), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to ticket, method: :delete, data: { confirm: "Do you really want to delete this ticket?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(ticket.updated_at) %> ago
  </div>
</div>
