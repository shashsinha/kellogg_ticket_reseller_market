<div class="card mb-3">
  <h2 class="card-header h4">
    Bought Ticket #<%= bought_ticket.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Ticket bought</dt>
      <dd>
        <% if @bought_ticket.ticket_bought.present? %>
          <%= link_to bought_ticket.ticket_bought, bought_ticket.ticket_bought %>
        <% end %>
      </dd>

      <dt>Bought by</dt>
      <dd>
        <% if @bought_ticket.bought_by.present? %>
          <%= link_to bought_ticket.bought_by, bought_ticket.bought_by %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back bought_ticket, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_bought_ticket_url(bought_ticket), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to bought_ticket, method: :delete, data: { confirm: "Do you really want to delete this bought_ticket?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(bought_ticket.updated_at) %> ago
  </div>
</div>
